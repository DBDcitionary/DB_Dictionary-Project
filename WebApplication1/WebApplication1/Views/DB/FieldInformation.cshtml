@model IEnumerable<WebApplication1.Field_Tbl>

@{
    ViewBag.Title = "FieldInformation";
}
<div class="jumbotron">
    <h1>Database Dictionary</h1>
</div>

<h2>Field Information</h2><br />

<div id="search">
    <p>
        @using (@Html.BeginForm("search", "DB", FormMethod.Get))
        {
            <label>Search: </label><br />
            @Html.RadioButton("searchby", "1")<text> Database </text>
            @Html.RadioButton("searchby", "2")<text> Table </text>
            @Html.RadioButton("searchby", "3")<text> Field </text><br /><br />
            <div id="searchtxtbox">
                @Html.TextBox("search", null, new { placeholder = "Search...", style = "Height:34px;Width:240px" })
            </div>
            <div id="btnSearch">
                <button type="submit" class="btn btn-primary" value="search"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        }
    </p>
</div>

<div>
    <span class="glyphicon glyphicon-circle-arrow-left">
        @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer })
    </span>
</div><br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th> Name
            <!--@Html.DisplayNameFor(model => model.Field_Name)-->
        </th>
        <th> Description
            <!--@Html.DisplayNameFor(model => model.Field_Description)-->
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Field_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Field_Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Field_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Field_ID })
        </td>
    </tr>
    }
</table>
