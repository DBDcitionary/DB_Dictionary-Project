@model WebApplication1.Models.DatabaseMetaData
    @{
        ViewBag.Title = "G4S Database Dictionary";
    }
   
    <div>
            <fieldset>
                <legend>Connect to Server</legend>
                @using (Html.BeginForm("Index", "DB", FormMethod.Post))
                {
                    <div>
                        <text><strong>Server Name: </strong></text><br /><br />
                        <div class="text-info" style="font-size: 12px">
                            Please Select Server or Enter Server Name
                        </div>
                        <div id="cmbbox1">
                            @Html.DropDownList("ServerName", null, new { @class = "form-control" })
                        </div>
                        <text>Alternative :</text>
                        @Html.TextBox("AlternativeServerName", null, new { @class = "form-control" })
                        <div id="alternativeServer">
                            @Html.CheckBox("AlternativeServerClicked")<text> Check to use this Server</text>
                        </div>
                        @Html.CheckBox("SQLAuthentication")<text> Use SQL Authentication</text><br /><br />
                        <text><strong>User Name:</strong></text>
                        <div id="auth">
                            @Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "Username" })
                        </div>
                        <text><strong>Password:</strong></text>
                        <div id="auth">
                            @Html.Password("Password", null, new { @class = "form-control", @placeholder = "Password" })
                        </div><br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" name="button" value="Connect" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                <br />
                <div>
                    @if (ViewBag.Databases.Items.Count != 0)
                    {
                            <strong><text>Select Database To Import:</text></strong><br /><br />
                            <div>
                                @Html.DropDownList("Databases", null, new { @class = "form-control", style = "Width:100%" })
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" name="button" value="Import/Update" class="btn btn-default" />
                                </div>
                            </div>
                    }
                </div>
                <br />
                }
        </fieldset>      
</div>



